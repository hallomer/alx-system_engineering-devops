#!/usr/bin/env bash
# Update package lists and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create web root directory and set permissions
mkdir -p /var/www/html/
sudo chmod -R 755 /var/www

# Set default index page
echo 'Welcome to Nginx!' > /var/www/html/index.html

# Configure Nginx server block
SERVER_CONFIG=$(cat <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    if ($request_uri ~* ^/redirect_me) {
        return 301 https://www.youtube.com/watch?v=Htqn7tGvQsc;
    }
}
EOF
)

# Write server block configuration to Nginx config file
printf "%s" "$SERVER_CONFIG" | sudo tee /etc/nginx/sites-enabled/default >/dev/null

# Restart Nginx if running, otherwise start it
if [ "$(pgrep -c nginx)" -gt 0 ]; then
    sudo service nginx restart
else
    sudo service nginx start
fi
